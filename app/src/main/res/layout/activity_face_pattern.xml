<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamproject.applock.FacePattern">
    <Button
        android:id="@+id/i_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Un-lock Using PIN"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="checkActivity"
        style="@style/facepattern"
        />
    <TableLayout
        android:id="@+id/c_tableview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/i_enter">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/iitem1"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iitem2"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iitem3"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/iitem4"
                style="@style/facepattern"
                android:onClick="enterPattern1"
                android:textAlignment="center"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iitem5"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iitem6"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/iitem7"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iitem8"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iitem9"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/iitemx"
                style="@style/numpad"
                android:text="@string/numx"
                android:textAlignment="center"
                android:onClick="enterPattern1"
                />
            <Button
                android:id="@+id/iitemE"
                style="@style/numpad"
                android:text="@string/enter"
                android:textAlignment="center"
                android:onClick="patternRecognition"
                />
        </TableRow>
    </TableLayout>


</RelativeLayout>
