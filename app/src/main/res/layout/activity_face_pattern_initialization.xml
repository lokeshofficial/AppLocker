<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamproject.applock.FacePatternInitialization">
    <Button
        android:id="@+id/ii_enter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_image"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="setPattern"
        style="@style/facepattern"
        />
    <TableLayout
        android:id="@+id/ic_tableview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/i_enter">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/iiitem1"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iiitem2"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iiitem3"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/iiitem4"
                style="@style/facepattern"
                android:onClick="enterPattern"
                android:textAlignment="center"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iiitem5"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iiitem6"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <ImageButton
                android:id="@+id/iiitem7"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iiitem8"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
            <ImageButton
                android:id="@+id/iiitem9"
                style="@style/facepattern"
                android:textAlignment="center"
                android:onClick="enterPattern"
                android:scaleType="fitCenter"
                android:padding="3dp"
                />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/iiitemx"
                style="@style/numpad"
                android:text="@string/numx"
                android:textAlignment="center"
                android:onClick="enterPattern"
                />
        </TableRow>
    </TableLayout>

</RelativeLayout>
